<% provide(:page_title, 'All_Article') %>

<p id="notice"><%= notice %></p>

<h1>Articles</h1>
<%= form_tag articles_path, method: :get do %>
  <%= text_field_tag 'term', params[:term], placeholder: "Enter text you wanto find" %>
  <%= submit_tag 'Search!' %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Description</th>
      <th>When</th>
      <th>Time</th>
      <th>picture</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= article.description %></td>
        <td><%= time_ago_in_words(article.created_at)%> ago</td>
        <td><%= article.created_at.strftime('%B, %d, %Y')%></td>
        <td><%= article.image.small_size.url %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
